---
import UserComponent from './UserComponent.astro';
import MenuLink from './MenuLink.astro';

import { getSession } from 'auth-astro/server';
import { Users } from 'astro:db';
---

<nav
    class='sticky top-0 flex text-neutral-50/80 w-full px-8 py-2 pr-2 justify-between items-center bg-dark-primary-blue z-30'
>
    <a
        href='/tienda'
        class='focus:outline-none'
    >
        <img
            src='/logo_steam.svg'
            alt='Steam'
            width='135'
            height='34'
            loading='eager'
        />
    </a>

    <menu class='flex gap-4 text-xl items-center'>
        <MenuLink href='/tienda'>TIENDA</MenuLink>
        <MenuLink href='/comunidad'>COMUNIDAD</MenuLink>
        <MenuLink href='/usuario'>USUARIO</MenuLink>
        <MenuLink href='/chat'>CHAT</MenuLink>
        <MenuLink href='/soporte'>SOPORTE</MenuLink>
    </menu>

    <UserComponent />
</nav>
