---
import ShopLayout from '@/layouts/ShopLayout.astro';
import GamesLayout from '@/layouts/GamesLayout.astro';

const path = Astro.url.href;
const gameURL = path.split('/games/')[1];
const title = gameURL.replaceAll('-', ' ');
---

<ShopLayout title={title}>
    <GamesLayout gameURL={gameURL} />
</ShopLayout>
